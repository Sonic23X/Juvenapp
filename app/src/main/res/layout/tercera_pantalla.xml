<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_pantalla3">

    <LinearLayout
        android:layout_width="399dp"
        android:layout_height="604dp"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnGorra"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/gorra" />

            <Space
                android:layout_width="80dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnTaza"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/taza" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnCilindro"
                android:layout_width="90dp"
                android:layout_height="150dp"
                android:background="@drawable/cilindro" />

            <Space
                android:layout_width="110dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnDelantal"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:background="@drawable/mandil" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>