<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="prueba.com.juvenapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logoicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Primera_pantalla"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Segunda_pantalla"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Sexta_pantalla"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Tercera_pantalla"
            android:screenOrientation="portrait" />
        <activity android:name=".PropuestActivity" />
        <activity android:name=".Memorama_Activity"></activity>
    </application>

</manifest>